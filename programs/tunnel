os.loadAPI("apis/data")
os.loadAPI("apis/base")

VERSION = "0.0.0"

CHEST_SLOT = 14
BUILDABLE_SLOT = 15
COBBLE_SLOT = 13

function getFuel()
    turtle.select(base.COAL_SLOT)
    local amount = turtle.getItemSpace()
    if amount == 0 then
        return
    end
    if not turtle.suckDown(amount) then
        print("WARNING: NO FUEL FOUND")
    end
end


getFuel()
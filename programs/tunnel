os.loadAPI("apis/data")
os.loadAPI("apis/base")

VERSION = "0.0.0"

CHEST_SLOT = 14
BUILDABLE_SLOT = 15
COBBLE_SLOT = 13

function getFuel()
    turtle.select(base.COAL_SLOT)
    local amount = turtle.getItemSpace()
    if amount == 0 then
        print("INFO: FUEL FULL")
        return
    end
    if not turtle.suckDown(amount) then
        print("WARNING: NO FUEL FOUND")
    end
end

function dig2x1forward()
    turtle.dig()
    turtle.forward()
    turtle.digUp()
end

function tunnel(amount)
    local i = 0
    while i < amount do
        dig2x1forward()
        i = i + 1
    end
    i = 0

    while i < amount do
        turtle.back()
    end
end

getFuel()
tunnel(16)